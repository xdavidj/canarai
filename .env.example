# canar.ai Configuration
# Copy to .env and fill in values

# Database (SQLite for self-hosted, PostgreSQL for hosted)
DATABASE_URL=sqlite+aiosqlite:///./canarai.db
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/canarai

# Redis (optional, for rate limiting and nonce store)
# REDIS_URL=redis://localhost:6379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=8787
API_SECRET_KEY=change-me-to-a-random-secret

# CORS (comma-separated origins)
CORS_ORIGINS=*

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3

# Script Settings
SCRIPT_BASE_URL=http://localhost:8787

# Environment: development | production
ENVIRONMENT=development
